<%- include('../partials/header')  %>

<nav>
    <ul>
      <li><a href="/skills/<%= skill.id %>">&lt; Back</a></li>
    </ul>
  </nav>

<h1>Edit Skill</h1>

<form action="/skills/<%= skill.id %>?_method=PUT" method="POST">
    Skill:
    <input type="text" name="skill" value="<%= skill.skill %>">
    Difficulty (Current Difficulty: <%= skill.difficulty %>):
    <select name="difficulty">
        <option value="Easy">Easy</option>
        <option value="Slightly Challenging">Slightly Challenging</option>
        <option value="Challenging">Challenging</option>
        <option value="Very Challenging">Very Challenging</option>
        <option value="Beyond current realistic expectations">Beyond current realistic expectations</option>
    </select>
    Proficiency (Current Proficiency: <%= skill.proficiency %>):
    <select name="proficiency">
        <option value="0/10">0</option>
        <option value="1/10">1</option>
        <option value="2/10">2</option>
        <option value="3/10">3</option>
        <option value="4/10">4</option>
        <option value="5/10">5</option>
        <option value="6/10">6</option>
        <option value="7/10">7</option>
        <option value="8/10">8</option>
        <option value="9/10">9</option>
        <option value="10/10">10</option>
    </select>
    Brief Description of the Skill:
    <input type="text" name="description" value="<%= skill.description %>">
    <button type="submit">Update Skill</button>

</form>

<%- include('../partials/footer')  %>